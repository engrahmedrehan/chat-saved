{
    "manifest_version": 3,
    "name": "AI Chat Archiver",
    "version": "1.0.0",
    "description": "Automatically detect, extract, and save chat conversations from AI chatbot websites. Supports lossless PDF and Latex extraction.",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://chatgpt.com/*",
        "*://chat.openai.com/*",
        "*://gemini.google.com/*",
        "*://chat.deepseek.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://chatgpt.com/*",
                "*://chat.openai.com/*",
                "*://gemini.google.com/*",
                "*://chat.deepseek.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "AI Chat Archiver"
    },
    "icons": {
        "16": "icon128.png",
        "48": "icon128.png",
        "128": "icon128.png"
    }
}